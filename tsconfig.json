{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "alwaysStrict": true,
    "moduleResolution": "Bundler",
    "noEmit": true
  },
  "include": ["ts/**/*", "scripts/**/*", "*.js", "*.mjs", "version.ts"]
}
