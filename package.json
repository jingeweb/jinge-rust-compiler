{
  "name": "jinge-compiler",
  "version": "4.0.0",
  "description": "template compiler for jinge mvvm framework",
  "author": "Yuhang Ge<abeyuhang@gmail.com>",
  "license": "ISC",
  "type": "module",
  "main": "dist/index.js",
  "types": "ts/index.ts",
  "keywords": [
    "jinge",
    "compiler",
    "swc"
  ],
  "scripts": {
    "build-ts": "tsup ts/index.ts --format esm",
    "build-cargo-debug": "cargo build && cp target/debug/libjinge_compiler.so index.node 2>/dev/null || : && cp target/debug/libjinge_compiler.dylib index.node 2>/dev/null || :",
    "watch-cargo": "cargo watch -i lib -i ts -- pnpm build-cargo-debug",
    "dev": "concurrently \"pnpm build-ts --watch\" \"pnpm watch-cargo\"",
    "build": "pnpm lint && pnpm build-ts --silent && echo 'Build ts done. Use github actions to build and release rust core!!'",
    "lint-fix": "eslint '**/*.{js,mjs,ts}' --fix && prettier --log-level=warn --write . !*.yaml",
    "lint": "tsc --noEmit && eslint '**/*.{js,mjs,ts}' && prettier --check . !*.yaml",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "files": [
    "package.json",
    "LICENSE",
    "README.md",
    "ts",
    "dist"
  ],
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.5.4",
    "concurrently": "^8.2.2",
    "esbuild": "^0.23.1",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import-x": "^4.2.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.5.0",
    "vite": "^5.4.4"
  },
  "dependencies": {
    "jinge-compiler-core-linux-aarch64": "^1.0.0",
    "jinge-compiler-core-linux-x86_64": "^1.0.0",
    "jinge-compiler-core-macos-aarch64": "^1.0.0",
    "jinge-compiler-core-macos-x86_64": "^1.0.0",
    "jinge-compiler-core-windows-x86_64": "^1.0.0"
  }
}
